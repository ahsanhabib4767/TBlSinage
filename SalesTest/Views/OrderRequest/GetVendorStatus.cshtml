    </div>
</div>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<script src="//cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>
<script>
        var Popup, dataTable;
        $(document).ready(function () {
            dataTable =  $("#employeeTable").DataTable({
                "ajax": {
                    "url": "/OrderRequest/MKT",
                    "type": "GET",
                    "datatype": "json",
                    
                },
                "columns": [
                    { "data": "VenReqID" },
                    { "data": "OutletCode" },
                    { "data": "OutLetName" },
                    { "data": "Address" },
                    { "data": "ContactNum" },
                    { "data": "RegionName" },
                    
                    { "data": "sinageTypeName" },
                    { "data": "VendorName" },
                    {
                        "data": "dateLimit", "render": function (jsonDate) {
                            if (!jsonDate) {
                                return 'N/A';
                            }
                            else {
                                var date = new Date(parseInt(jsonDate.substr(6)));
                                var month = date.getMonth() + 1;
                                return date.getDate() + "/" + month + "/" + date.getFullYear();
                            }
                        }
                    },
                    {
                        "data": "dateLimitfinal", "render": function (jsonDate) {
                            if (!jsonDate) {
                                return 'N/A';
                            }
                            else {
                                var date = new Date(parseInt(jsonDate.substr(6)));
                                var month = date.getMonth() + 1;
                                return date.getDate() + "/" + month + "/" + date.getFullYear();
                            }
                        }
                    },
                    {
                        "data": "diff", "render": function (diff) {
                            if (diff < 0) {
                                return '<p style="color:red">Date Over</p>';
                            }
                            else if (diff == 0) {
                                return '<p style="color:green">Last Day</p>';
                            }
                            else if (diff == null) {
                                return '<p style="color:green">Not Acknowledged</p>';
                            }
                            else {
                                return diff +"-"+ 'দিন';
                            }
                        }
                     },
                    {
                        "data": "installDate", "render": function (jsonDate) {
                            if (!jsonDate) {
                                return 'Not Installed!';
                            }
                            else {
                                var date = new Date(parseInt(jsonDate.substr(6)));
                                var month = date.getMonth() + 1;
                                return date.getDate() + "/" + month + "/" + date.getFullYear();
                            }
                        }
                    },
                    {
                        "data": "SEfeedback", "render": function (SEfeedback) {
                            if (!SEfeedback) {
                                return '<p style="color:red">Pending</p>';
                            }
                            else return '<p style="color:green">' + SEfeedback + '</p>';
                        }
                    },
                    {
                        "data": "id", "render": function (data) {
                            if (data) {
                                return "<a class='btn btn-success btn-sm small dark account review_ratings_login' onclick=PopupForm2(" + data + ")><i class='fa fa-pencil'></i>Image</a>";
                            }
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "150px"
                    },
                   
                     
                ],
                "language": {

                    "emptyTable" : "No data found"
                }
            });
        });
        function ViewFunction(data) { 
          $("#ajax_load").show();
                $.ajax({
                    url: "@Url.Action("MyVendor", "Report")",
                    dataType: "HTML",
                    type: "POST",
                    data: { reqid: data },
                    cache: false,
                    async: true,
                    success: function (data) {
                        $("#tabledata").html(data);
                    }
                });

           
        }
    function PopupForm2(data) {
        var url = '/OrderRequest/MK_Detail/' + data;
        $.ajax({
            type: 'GET',
            url: url,
            success: function (output) {
                //$('#login_for_review').html(output).modal('show');//now its working
                $("#getCode").html(output);
                $("#login_for_review").modal('show');
            },
            error: function (output) {
                alert("fail");
            }
        });
    }
</script>
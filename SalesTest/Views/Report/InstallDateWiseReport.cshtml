@{
    Layout = "~/Views/Shared/_LayoutTwo.cshtml";
}
@{
    ViewBag.Title = "Work Request Status";
}
<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Progress Status of a Request</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Settings 1</a>
                                    <a class="dropdown-item" href="#">Settings 2</a>
                                </div>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        <div class="col-md-4">
                            <input type="radio" name="nm" id="r1" value="1" class="radio radio-inline">Install Datewise</>
                            <input type="radio" name="nm" id="r2" value="2" class="radio radio-inline">Vendor Wise</>
                            <label>Enter Begining Date:</label>
                            @Html.TextBox("BeginingDate", DateTime.Now.ToString("dd-MMM-yyyy"), new { @class = "form-control date-picker" })
                            <label>Enter Ending Date:</label>
                            @Html.TextBox("EndingDate", DateTime.Now.ToString("dd-MMM-yyyy"), new { @class = "form-control date-picker" })
                            <label>Vendor Name</label>
                            @Html.DropDownList("VenID",null,"Select One",new { @class = "form-control"});
                            <label>Click</label>
                            <input type="button" id="showReport" value="Preview" class="form-control btn-primary" />
                        </div>



                    </div>
                    <div class="table-responsive" id="tabledata"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script>
    $('.date-picker').datepicker({
        dateFormat: "M/dd/yy",
        changeMonth: true,
        changeYear: true,
        yearRange: "-1:+0"
    });
    $(document).ready(function () {
        $('#showReport').click(function () {

            var vValue = $("#ReqID").val();
            $.ajax({
                url: "@Url.Action("InstallDateWise", "Report")",
                dataType: "HTML",
                type: "POST",
                data: { bDate: $("#BeginingDate").val(), eDate: $("#EndingDate").val() },
                cache: false,
                async: true,
                success: function (data) {
                    $("#tabledata").html(data);
                }
            });
        });
    })
</script>


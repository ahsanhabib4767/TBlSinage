@{
    Layout = "~/Views/Shared/_LayoutTwo.cshtml";
}
@{
    ViewBag.Title = "Work Request Status";
}
<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">

                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Settings 1</a>
                                    <a class="dropdown-item" href="#">Settings 2</a>
                                </div>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <p>Progress Status of a Request</p>
                        <div class="col-md-4">
                            <label>Select Requisition ID:</label>
                            @Html.DropDownList("ReqID", null, "Select Request Number ", new { @class = "form-control", @id = "ReqID" })
                            <label>Click</label>
                            <input type="button" id="showReport" value="Preview" class="form-control btn-primary" />
                        </div>
                        <div id="tabledata"></div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('#showReport').click(function () {

        var vValue = $("#ReqID").val();


        $.ajax({
            url: "@Url.Action("WOStatus", "Report")",
            dataType: "HTML",
            type: "POST",
            data: { reqid: vValue},
            cache: false,
            async: true,
            success: function (data) {
                $("#tabledata").html(data);
            }
        });
    });
</script>
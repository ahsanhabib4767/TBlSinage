@{
    Layout = "~/Views/Shared/_LayoutTwo.cshtml";
}
@{
    ViewBag.Title = "ListofRequestMEM";
}
<!-- page content -->
<div class="modal fade" id="login_for_review" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Give Decision</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="getCode">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<div class="right_col" role="main">
    <div class="">

        <div class="clearfix"></div>

        <div class="row">

            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">

                    <div class="x_content">
                        <div class="x_title">
                            <h2>Request for ASM<small>Approval</small></h2>
                        </div>
                    </div>

                </div>

                <div class="container">
                    <div class="table-responsive">
                        <table id="employeeTable" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>RequestID</th>
                                    <th>Outlet Code</th>
                                    <th>Region Name</th>
                                    <th>InstallDate</th>
                                    <th>Visi Code</th>
                                    <th>Address</th>
                                    <th>Db Name</th>
                                    <th>New Visicooler Size</th>
                                    <th>Night Guard</th>
                                    <th></th>

                                </tr>
                            </thead>
                        </table>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<script src="//cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>
<script>
        var Popup, dataTable;
        $(document).ready(function () {
            dataTable =  $("#employeeTable").DataTable({
                "ajax": {
                    "url": "/VisiCooler/GetDataSE",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "ReqID" },
                    { "data": "OutletCode" },
                    { "data": "RegionName" },
                    {
                        "data": "installDate", "render": function (jsonDate) {
                            if (!jsonDate) {
                                return 'N/A';
                            }
                            else {
                                var date = new Date(parseInt(jsonDate.substr(6)));
                                var month = date.getMonth() + 1;
                                return date.getDate() + "/" + month + "/" + date.getFullYear();
                            }
                        }
                    },
                    { "data": "VisiCode" },
                    { "data": "Address" },
                    { "data": "DbName" },
                    { "data": "NewVisiSize" },
                    { "data": "NightGuard" },
                    {
                        "data": "id", "render": function (data) {
                            return "<a class='btn btn-success btn-sm small dark account review_ratings_login' onclick=PopupForm2(" + data + ")><i class='fa fa-pencil'></i>Decision</a>";
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "150px"
                    }

                ],
                "language": {

                    "emptyTable" : "No data found"
                }
            });
        });


        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if($(form).valid()){
                $.ajax({
                    type : "POST",
                    url : form.action,
                    data : $(form).serialize(),
                    success : function (data) {
                        if(data.success)
                        {
                            Popup.dialog('close');
                            dataTable.ajax.reload();

                            $.notify(data.message,{
                                globalPosition :"top center",
                                className : "success"
                            })

                        }
                    }
                });
            }
            return false;
        }

        function PopupForm2(data) {
            var url = '/VisiCooler/PartialSE/' + data;
            $.ajax({
                type: 'GET',
                url: url,
                success: function (output) {
                    //$('#login_for_review').html(output).modal('show');//now its working
                    $("#getCode").html(output);
                    $("#login_for_review").modal('show');
                },
                error: function (output) {
                    alert("fail");
                }
            });
        }

</script>




